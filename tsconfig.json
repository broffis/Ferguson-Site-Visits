{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": ".",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "allowUnusedLabels": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "include": [
    "src"
  ]
}
