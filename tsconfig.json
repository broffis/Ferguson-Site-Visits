{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowUnusedLabels": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}
